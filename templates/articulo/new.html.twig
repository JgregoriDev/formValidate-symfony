{% extends 'base.html.twig' %}

{% block title %}Crear artículo nuevo
{% endblock %}

{% block body %}
	{% if formBusqueda is defined  %}

		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Crear artículo nuevo</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_articulo_index') }}">Articulos</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Crear artículo nuevo</li>
		</ol>
	</nav>
	{{ include('articulo/_form.html.twig') }}


{% endblock %}
