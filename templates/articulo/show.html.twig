{% extends 'base.html.twig' %}

{% block title %}Mostrar artículo
{% endblock %}

{% block body %}
	{% if formBusqueda is defined  %}

		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Mostrar artículo</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_articulo_index') }}">Articulos</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Mostrar artículo</li>
		</ol>
	</nav>
	<div class="my-3 d-flex justify-content-end">
		<a class="btn btn-warning me-1" href="{{ path('app_articulo_edit', {'codarticulo': articulo.codarticulo}) }}">Editar</a>

		{{ include('articulo/_delete_form.html.twig') }}
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>Código artículo</th>
				<td>{{ articulo.codarticulo }}</td>
			</tr>
			<tr>
				<th>Código ean</th>
				<td>{{ articulo.codigoean }}</td>
			</tr>
			<tr>
				<th>Referencia proveedor</th>
				<td>{{ articulo.referenciaproveedor }}</td>
			</tr>
			<tr>
				<th>Referencia marca</th>
				<td>{{ articulo.referenciamarca }}</td>
			</tr>
			<tr>
				<th>Descripción</th>
				<td>{{ articulo.descripcion }}</td>
			</tr>
			<tr>
				<th>Margen auxiliar</th>
				<td>{{ articulo.auxMargen }}</td>
			</tr>
			<tr>
				<th>Margen</th>
				<td>{{ articulo.margen }}</td>
			</tr>
			<tr>
				<th>Base</th>
				<td>{{ articulo.base }}</td>
			</tr>
			<tr>
				<th>Existencias disponibles</th>
				<td>{{ articulo.existenciasdisponibles }}</td>
			</tr>
			<tr>
				<th>PVP oferta en el mostrador</th>
				<td>{{ articulo.pvpOfertaMostrador }}</td>
			</tr>
			<tr>
				<th>PVP</th>
				<td>{{ articulo.pvp }}</td>
			</tr>
			<tr>
				<th>PVP2</th>
				<td>{{ articulo.pvp2 }}</td>
			</tr>
			<tr>
				<th>Código</th>
				<td>{{ articulo.codigo }}</td>
			</tr>
			<tr>
				<th>Ha habido mano de obra</th>
				<td>{{ articulo.esmanoobra ? 'Si' : 'No' }}</td>
			</tr>
			<tr>
				<th>UdsUltimaentrada</th>
				<td>{{ articulo.udsUltimaentrada }}</td>
			</tr>
			<tr>
				<th>Base2</th>
				<td>{{ articulo.base2 }}</td>
			</tr>
			<tr>
				<th>Artículo favorito</th>
				<td>{{ articulo.favorito ? 'Si' : 'No' }}</td>
			</tr>
			<tr>
				<th>Posibleb</th>
				<td>{{ articulo.posibleb ? 'Si' : 'No' }}</td>
			</tr>
			<tr>
				<th>Código artículo granel</th>
				<td>{{ articulo.codartGranel }}</td>
			</tr>
			<tr>
				<th>Unidades por granel</th>
				<td>{{ articulo.udXUdgrannel }}</td>
			</tr>
			<tr>
				<th>IVA porcentaje</th>
				<td>{{ articulo.ivapercent }}</td>
			</tr>
			<tr>
				<th>Número de orden a la hora de mostrar</th>
				<td>{{ articulo.nordenMostrar }}</td>
			</tr>
			<tr>
				<th>Intrastat</th>
				<td>{{ articulo.intrastat }}</td>
			</tr>
			<tr>
				<th>Unidad medida</th>
				<td>{{ articulo.umedida }}</td>
			</tr>
			<tr>
				<th>Peso</th>
				<td>{{ articulo.peso }}</td>
			</tr>
			<tr>
				<th>ReqEq</th>
				<td>{{ articulo.reqEq }}</td>
			</tr>
			<tr>
				<th>Código categoría</th>
				<td>{{ articulo.codcategoria }}</td>
			</tr>
			<tr>
				<th>Código subcategoría</th>
				<td>{{ articulo.codsubcategoria }}</td>
			</tr>
			<tr>
				<th>Idwoocommerce</th>
				<td>{{ articulo.idwoocommerce }}</td>
			</tr>
			<tr>
				<th>Caractecnicas</th>
				<td>{{ articulo.caractecnicas }}</td>
			</tr>
			<tr>
				<th>Pvd</th>
				<td>{{ articulo.pvd }}</td>
			</tr>
			<tr>
				<th>Nombre categoría</th>
				<td>{{ articulo.nomcategoria }}</td>
			</tr>
			<tr>
				<th>Nombre subcategorí<a href=""></a></th>
				<td>{{ articulo.nomsubcategoria }}</td>
			</tr>
			<tr>
				<th>Imagen</th>
				<td>{{ articulo.imagen }}</td>
			</tr>
		</tbody>
	</table>
	{% if base64Image is not null %}
		<div class="mb-3">
			<img src="data:image/png;base64,{{base64Image}}" alt="" srcset="">
		</div>

	{% endif %}
	<div class="text-center">

		<a href="{{ path('app_articulo_index') }}" class="btn btn-secondary">Volver a la lista</a>
	</div>


{% endblock %}
