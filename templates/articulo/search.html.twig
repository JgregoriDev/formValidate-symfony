{% extends 'base.html.twig' %}

{% block title %}Busqueda artículo
{% endblock %}

{% block body %}
	<h1>Busqueda artículo</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_articulo_index') }}">Articulos</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Buscar artículo</li>
		</ol>
	</nav>
	<h3>Resultados de busqueda por descripción
		{{textoBuscado}}</h3>
	<div class="d-inline justify-content-center align-content-center">
		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
		{% if articulos is not empty %}
			<p>Total de articulos encontrados
				{{articulos|length}}</p>
			<div class="row">
				{% for articulo in articulos %}
					<div class="card col-2 gapp-1" style="">
				
						
						<div class="card-body">
							<h5 class="card-title">Código artículo: {{articulo.codarticulo}}
							</h5>
							<p class="card-text">Descripcion: {{articulo.descripcion}}</p>
							<a href="{{ path('app_articulo_show',{'codarticulo': articulo.codarticulo}) }}" class="btn btn-primary">Ver página artículo</a>
						</div>
					</div>
					<div class="col-1"></div>

				{% endfor %}
			</div>
			<div class="d-flex justify-content-center">
				{{ knp_pagination_render(articulos) }}
			</div>
		{% endif %}

	</div>


{% endblock %}
