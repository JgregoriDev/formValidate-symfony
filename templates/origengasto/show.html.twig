{% extends 'base.html.twig' %}

{% block title %}Origengasto
{% endblock %}

{% block body %}
{% if formBusqueda is defined %}
	<div class="d-inline justify-content-center align-content-center">
		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Origengasto</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_origengasto_index') }}">Origenes de gasto</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Mostrar origen de gasto</li>
		</ol>
	</nav>
	<div class="d-flex justify-content-end">
		{{ include('origengasto/_delete_form.html.twig') }}
		<a href="{{ path('app_origengasto_edit', {'codorigen': origengasto.codorigen}) }}" class="btn mx-2 btn-warning">Editar</a>

	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>Codorigen</th>
				<td>{{ origengasto.codorigen }}</td>
			</tr>
			<tr>
				<th>Descripcion</th>
				<td>{{ origengasto.descripcion }}</td>
			</tr>
			<tr>
				<th>Cuenta</th>
				<td>{{ origengasto.cuenta }}</td>
			</tr>
			<tr>
				<th>Esinmolizado</th>
				<td>{{ origengasto.esinmolizado ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="text-center">
	<a href="{{ path('app_origengasto_index') }}" class="btn btn-secondary">Volver a la lista</a>
	</div>


{% endblock %}
