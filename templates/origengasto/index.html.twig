{% extends 'base.html.twig' %}

{% block title %}Listado origen de gasto
{% endblock %}

{% block body %}
{% if formBusqueda is defined %}
	<div class="d-inline justify-content-center align-content-center">
		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Listado origenes de gasto</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Origenes de gasto</li>
		</ol>
	</nav>
	<div class="d-flex justify-content-end">
		<a href="{{ path('app_origengasto_new') }}" class="btn btn-primary">AÃ±adir origen gasto</a>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Codorigen</th>
				<th>Descripcion</th>
				<th>Cuenta</th>
				<th>Esinmolizado</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for origengasto in origengastos %}
				<tr>
					<td>{{ origengasto.codorigen }}</td>
					<td>{{ origengasto.descripcion }}</td>
					<td>{{ origengasto.cuenta }}</td>
					<td>{{ origengasto.esinmolizado ? 'Yes' : 'No' }}</td>
					<td>
						{# <a href="{{ path('app_origengasto_show', {'codorigen': origengasto.codorigen}) }}">Mostrar</a>
																																										<a href="{{ path('app_origengasto_edit', {'codorigen': origengasto.codorigen}) }}" class="btn btn-warning">Editar</a> #}
						{# <b href="{{ path('app_origengasto_delete', {codorigen: origengasto.codorigen}) }}" id="b{{origengasto.codorigen}}" class="btn my-2 my-lg-0 btn-danger mx-1" data-bs-toggle="modal" data-bs-target="#vModal" title="Borrar">
							<i class="bi bi-trash2-fill"></i>
						</b> #}
						<a href="{{ path('app_origengasto_show', {codorigen: origengasto.codorigen}) }}" class="btn my-2 my-lg-0 btn-secondary mx-1" title="Ver">
							<i class="bi bi-eye"></i>
						</a>
						<a href="{{ path('app_origengasto_edit', {codorigen: origengasto.codorigen}) }}" class="btn my-2 my-lg-0 btn-warning mx-1" title="Editar">
							<i class="bi bi-pencil-square"></i>
						</a>
					</td>

				</tr>
	
			{% else %}
				<tr>
					<td colspan="5">Ho hay origenes de gasto insertado</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
		<div class="d-flex justify-content-center">
					{{ knp_pagination_render(origengastos) }}
				</div>


{% endblock %}
