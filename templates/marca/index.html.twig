{% extends 'base.html.twig' %}

{% block title %}Listado de marcas
{% endblock %}

{% block body %}
{% if formBusqueda is defined  %}

		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Listado de marcas</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
		
			<li class="breadcrumb-item active" aria-current="page">Marcas</li>
		</ol>
	</nav>
		<div class="d-flex justify-content-end">
			<a href="{{ path('app_marca_new') }}" class="btn btn-primary">AÃ±adir marca</a>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Codmarca</th>
					<th>Nombremarca</th>
					<th>Rutalogo</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for marca in marcas %}
					<tr>
						<td>{{ marca.codmarca }}</td>
						<td>{{ marca.nombremarca }}</td>
						<td>{{ marca.rutalogo }}</td>
						<td>
							<a href="{{ path('app_marca_show', {'codmarca': marca.codmarca}) }}" class="btn btn-secondary" title="Ver">
								<i class="bi bi-eye"></i>
							</a>
							<a href="{{ path('app_marca_edit', {'codmarca': marca.codmarca}) }}" class="btn btn-warning" title="Editar">
								<i class="bi bi-pencil-square"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">No se han encontrado marcas</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="d-flex justify-content-center">
			{{ knp_pagination_render(marcas) }}
		</div>

	{% endblock %}
