{% extends 'base.html.twig' %}

{% block title %}Editar Familia
{% endblock %}

{% block body %}
	{% if formBusqueda is defined %}
		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Editar familia</h1>

	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_familia_index') }}">Familias</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Editar Familia</li>
		</ol>
	</nav>

	<div class="row">
		<div class="col-1"></div>
		<div class="col-10">

			<div class="d-flex justify-content-end">
				{{ include('familia/_delete_form.html.twig') }}
				{# <a href="{{ path('app_familia_index') }}" class="ms-1 btn btn-secondary">Volver a la lista</a> #}
			</div>
		</div>
		<div class="col-1"></div>
	</div>
	{{ include('familia/_form.html.twig', {'button_label': 'Actualizar'}) }}


{% endblock %}
