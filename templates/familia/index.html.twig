{% extends 'base.html.twig' %}

{% block title %}Familia index{% endblock %}

{% block body %}
    <h1>Familia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Codfamilia</th>
                <th>Nombre</th>
                <th>Margen</th>
                <th>Ivapercent</th>
                <th>Esmanoobra</th>
                <th>Iniciocodean</th>
                <th>Re</th>
                <th>Imagen</th>
                <th>Esanimales</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for familium in familias %}
            <tr>
                <td>{{ familium.codfamilia }}</td>
                <td>{{ familium.nombre }}</td>
                <td>{{ familium.margen }}</td>
                <td>{{ familium.ivapercent }}</td>
                <td>{{ familium.esmanoobra ? 'Yes' : 'No' }}</td>
                <td>{{ familium.iniciocodean }}</td>
                <td>{{ familium.re }}</td>
                <td>{{ familium.imagen }}</td>
                <td>{{ familium.esanimales ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_familia_show', {'codfamilia': familium.codfamilia}) }}">show</a>
                    <a href="{{ path('app_familia_edit', {'codfamilia': familium.codfamilia}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_familia_new') }}">Create new</a>
{% endblock %}
