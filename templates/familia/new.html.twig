{% extends 'base.html.twig' %}

{% block title %}Crear nueva Familia
{% endblock %}

{% block body %}
	{% if formBusqueda is defined %}
		{{form_start(formBusqueda)}}
		<div class="row">
			<div class="col-9">
				{{ form_widget(formBusqueda) }}
			</div>
			<div class="col-3">
				<button type="submit" class="d-inline btn btn-primary" title="Buscar">
					<i class="bi bi-search mx-2"></i>
				</button>
			</div>
		</div>
		{{form_end(formBusqueda)}}
	{% endif %}
	<h1>Crear nueva Familia</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_familia_index') }}">Familias</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Insertar Familia</li>
		</ol>
	</nav>

	{{ include('familia/_form.html.twig') }}

	{# <a href="{{ path('app_familia_index') }}" class="btn btn-secondary">Volver a la lista</a> #}
{% endblock %}
