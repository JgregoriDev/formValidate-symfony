{% extends 'base.html.twig' %}

{% block title %}Forma de pago
{% endblock %}

{% block body %}
	{% if formBusqueda is defined %}
		<div>
			{{form_start(formBusqueda)}}
			<div class="row">
				<div class="col-9">
					{{ form_widget(formBusqueda) }}
				</div>
				<div class="col-3">
					<button type="submit" class="d-inline btn btn-primary" title="Buscar">
						<i class="bi bi-search mx-2"></i>
					</button>
				</div>
			</div>
			{{form_end(formBusqueda)}}
		</div>
	
	{% endif %}
	<h1>Fp</h1>
	<nav aria-label="breadcrumb my-3">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_inicio') }}">Inicio</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_fp_index') }}">formas de pago</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Mostrar formas de pago</li>
		</ol>
	</nav>
	<div class="d-flex justify-content-end">
		<a href="{{ path('app_fp_edit', {'codfp': fp.codfp}) }}" class="btn btn-warning text-white mx-2">Editar</a>

		{{ include('fp/_delete_form.html.twig') }}
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>Codfp</th>
				<td>{{ fp.codfp }}</td>
			</tr>
			<tr>
				<th>Nombre</th>
				<td>{{ fp.nombre }}</td>
			</tr>
			<tr>
				<th>Numero de plazos</th>
				<td>{{ fp.nplazos }}</td>
			</tr>
			<tr>
				<th>Distancia</th>
				<td>{{ fp.distancia }}</td>
			</tr>
			<tr>
				<th>Codeempresa</th>
				<td>{{ fp.codeempresa }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex justify-content-center">
		<a href="{{ path('app_fp_index') }}" class="btn btn-secondary ">Volver a la lista</a>
	</div>


{% endblock %}
